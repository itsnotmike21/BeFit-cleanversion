@model BeFit.Models.DTOs.TrainingSessionCreateDto

@{
    ViewData["Title"] = "Dodaj sesję treningową";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="StartedAt" class="control-label"></label>
        <input asp-for="StartedAt" class="form-control" type="datetime-local" />
        <span asp-validation-for="StartedAt" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndedAt" class="control-label"></label>
        <input asp-for="EndedAt" class="form-control" type="datetime-local" />
        <span asp-validation-for="EndedAt" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}